@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    @using (Html.BeginForm("Index","Home",FormMethod.Post))
    {
        for (int i = 0; i < ViewBag.SecretWordLenght; i++)
        {
            <input type="text" name="userGuess" maxlength="1" required lang="da" id="guessBox"/>
        }
        <input type="submit" value="check"/>
     }
</div>
<article>
    <ul>
        @foreach (string guess in ViewBag.OldGuesses)
        {
            <li>@guess</li>
        }
    </ul>
</article>

